{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
            "paths": {
                "*": ["node_modules/*"]
            }
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "dist"]
}